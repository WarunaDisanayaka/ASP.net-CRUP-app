@model CRUD_App.Models.Student
@{
}

<h1>Student adding page</h1>

<form method="post" action="Add">
    <div class="form-group">
        <label for="studentName">Student Name:</label>
        <input type="text" class="form-control" id="studentName" asp-for="Name" required>
    </div>

    <div class="form-group">
        <label for="description">Description:</label>
        <textarea class="form-control" id="description" asp-for="Description" rows="4" cols="50"></textarea>
    </div>

    <div class="form-group">
        <label for="studentName">Student Grade:</label>
        <input type="text" class="form-control" id="studentName" asp-for="Grade" required>
    </div>

    <button type="submit" class="btn btn-primary">Add Student</button>
</form>